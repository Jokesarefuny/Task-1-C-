#include <iostream>

int main() {
    int num 1, num 2;
    
    // Get user input for the two positive integers
    std::cout << "Enter the first integer: ";
    std::cin >> num1;
    
    std::cout << "Enter the second integer: ";
    std::cin >> num2;
    
    int remainder = num1;
    
    while (remainder >= num2) {
        remainder = num2;
    }
    
    std::cout << "The remainder of " << num1 << " divided by " << num2 << " is " << remainder << std::endl;
    
    return 0;
}
